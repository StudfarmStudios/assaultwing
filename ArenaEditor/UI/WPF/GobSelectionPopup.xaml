<Window x:Name="SelectionWindow"
        x:Class="AW2.UI.WPF.GobSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Gob" MaxHeight="300" Width="200">
    <ListBox x:Name="GobList"
             ItemsSource="{Binding Gobs, ElementName=SelectionWindow}"
             SelectionChanged="ListBox_SelectionChanged">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding TypeName.Value}"/>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>
